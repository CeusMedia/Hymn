{
    "name": "ceus-media/hymn",
    "description": "Console tool for installing Hydrogen applications.",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Christian WÃ¼rker",
            "email": "christian.wuerker@ceusmedia.de",
            "homepage": "https://ceusmedia.de/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8",
        "ext-json": "*",
        "ext-PDO": "*",
        "ext-simplexml": "*",
        "ext-dom": "*"
    },
    "minimum-stability": "dev",
    "bin": [
        "bin/hymn"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1"
    },
    "scripts": {
        "create:phar": [
            "@dev:install-quiet",
            "test -f hymn.phar && rm hymn.phar",
            "php build/create.php --mode=prod && chmod +x hymn.phar"
        ],
        "create:phar-dev": [
            "@dev:install-quiet",
            "test -f hymn.phar && rm hymn.phar",
            "php build/create.php --mode=dev && chmod +x hymn.phar"
        ],
        "dev:install-quiet": "composer install --quiet",
        "dev:update-quiet": "composer update --quiet",
        "dev:phpunit": [
            "@dev:install-quiet",
            "XDEBUG_MODE=on php vendor/bin/phpunit"
        ],
        "dev:phpstan": [
            "@dev:install-quiet",
            "XDEBUG_MODE=off vendor/bin/phpstan analyze --verbose"
        ],
        "dev:phpstan-clear": [
            "@dev:install-quiet",
            "XDEBUG_MODE=off vendor/bin/phpstan clear-result-cache --verbose"
        ],
        "dev:phpstan-save": [
            "@dev:instal-quietl",
            "XDEBUG_MODE=off vendor/bin/phpstan analyse --configuration util/phpstan.neon --generate-baseline util/phpstan-baseline.neon --verbose"
        ],
        "dev:rector": [
            "@dev:install-quiet",
            "vendor/bin/rector --config=util/rector.php --clear-cache --dry-run"
        ],
        "dev:rector-fix": [
            "@dev:install-quiet",
            "vendor/bin/rector --config=util/rector.php --clear-cache "
        ],
        "dev:test-syntax": [
            "@dev:install-quiet",
            "vendor/bin/parallel-lint . -j 10 --colors --exclude vendor"
        ]
    },
    "scripts-descriptions": {
        "dev:phar": "Create productive version of PHAR file locally",
        "dev:phar-dev": "Create development version of PHAR file locally",
        "dev:install": "Installs project dependencies for Development stage",
        "dev:update": "Updates project dependencies for Development stage",
        "dev:unit": "Run unit tests",
        "dev:phpstan": "Validate codebase with PHPStan",
        "dev:phpstan-clear": "Clear PHPStan cache",
        "dev:phpstan-save": "Store current results in ignore list",
        "dev:test-syntax": "Validate code base syntax using PHP linter"
    }
}
